{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "src",
    "experimentalDecorators": true,
    // "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}